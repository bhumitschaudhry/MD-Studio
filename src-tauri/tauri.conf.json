{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "MD Studio",
  "version": "1.0.2",
  "identifier": "com.mdstudio.app",
  "build": {
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build",
    "devUrl": "http://localhost:5173",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "label": "main",
        "title": "MD Studio",
        "width": 1200,
        "height": 800
      }
    ]
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": ["icons/icon.ico"],
    "fileAssociations": [
      {
        "ext": ["md", "markdown", "mdown", "mkd", "mkdn"],
        "name": "MD Studio Markdown",
        "description": "Markdown Document",
        "role": "Editor"
      }
    ],
    "windows": {
      "nsis": {
        "installerHooks": "windows/installer-hooks.nsh"
      }
    }
  }
}
